@import "../../common/vendor.wxss";
.page {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  -webkit-align-content: flex-start;
  align-content: flex-start;
}
.page {
  background: #EDEDED;
}
.header {
  width: 100%;
  height: 400rpx;
}
.logo {
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  top: 150rpx;
  left: calc(50% - 75rpx);
}
.title {
  position: absolute;
  display: block;
  width: 100%;
  text-align: center;
  top: 320rpx;
  color: #666666;
  font-size: 33rpx;
}
.option {
  width: 100%;
  height: 90rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  margin-top: 5rpx;
  background: white;
}
.option:active {
  background: #B8B8B8;
}
.first {
  margin-top: 180rpx;
}
.desc {
  color: #666666;
  font-size: 32rpx;
  margin-left: 30rpx;
}
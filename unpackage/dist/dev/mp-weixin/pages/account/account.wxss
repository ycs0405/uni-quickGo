/*页面flex布局*/
.page{
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	-webkit-flex-wrap: wrap;
	    -ms-flex-wrap: wrap;
	        flex-wrap: wrap;
	-webkit-align-content: flex-start;
	    -ms-flex-line-pack: start;
	        align-content: flex-start;  /*交叉轴的起点对齐*/
}
.page{
	background: #EDEDED;
}
.main-content{
	width: 100%;
	margin-top: 30rpx;
	height: 320rpx;
	background: white;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	font-size: 70rpx;
	font-weight: 500;
	color: #66FFCC;
}
.option{
	width: 100%;
	height: 100rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	margin-top: 30rpx;
	background: white;
}
.option:active{
	background: #B8B8B8;
}
.option-img{
	width: 40rpx;
	height: 40rpx;
	margin-left: 30rpx;
}
.desc{
	color: #666666;
	font-size: 33rpx;
	margin-left: 30rpx;
}


